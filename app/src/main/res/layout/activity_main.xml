<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activityBackground"
    tools:context="com.renegades.labs.partygo.MainActivity">

    <Button
        android:id="@+id/ladies_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Ladies day"
        android:textSize="24sp" />

    <Button
        android:id="@+id/mens_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Mens day"
        android:textSize="24sp" />

    <Button
        android:id="@+id/birthday_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Birthday"
        android:textSize="24sp" />

    <Button
        android:id="@+id/child_birthday_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Child birthday"
        android:textSize="24sp" />

    <Button
        android:id="@+id/wedding_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Wedding"
        android:textSize="24sp" />

</LinearLayout>
